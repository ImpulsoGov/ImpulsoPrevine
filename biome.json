{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConsoleLog": "error",
                "noExplicitAny": "error",
                "noPrototypeBuiltins": "error"
            },
            "style": {
                "useNamingConvention": {
                    "level": "warn",
                    "options": {
                        "strictCase": false
                    }
                },
                "useConsistentArrayType": "error"
            },
            "correctness": {
                "useHookAtTopLevel": "error",
                "noUnusedVariables": "error",
                "noUnusedImports": "error",
                "noUnusedFunctionParameters": "error"
            },
            "complexity": {
                "useSimplifiedLogicExpression": "warn",
                "noExcessiveCognitiveComplexity": "error",
                "noForEach": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
