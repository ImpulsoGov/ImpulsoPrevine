{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@componentes/*": ["./src/componentes/*"],
            "@services/*": ["./src/services/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@utils/*": ["./src/utils/*"],
            "@constants/*": ["./src/constants/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@prisma/*": ["./prisma/*"],
            "@types/*": ["./src/types/*"],
            "@data/*": ["./src/data/*"]
        },
        "target": "ES2017"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/global.d.ts"
    ],
    "exclude": ["node_modules"]
}
